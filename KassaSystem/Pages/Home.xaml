<Page x:Class="KassaSystem.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KassaSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Home" MinHeight="350" MinWidth="525" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

    <Grid x:Name="KassaGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  MinHeight="350" MinWidth="525" Background="#FFB92121" Margin="0,0,-0.2,0.4">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="272*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="FActionscreen" Content="Actiescherm" HorizontalAlignment="Left" Height="60" Margin="0.2,0.2,0,0" VerticalAlignment="Top" Width="212" Background="#FFEDEDED" NavigationUIVisibility="Hidden" Grid.ColumnSpan="8" Grid.Column="1" Grid.RowSpan="2" Grid.Row="1"/>
        <TextBox x:Name="TbInput" HorizontalAlignment="Left" Height="23" Margin="0.2,0.6,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
        <StackPanel HorizontalAlignment="Left" Height="330" Margin="0,0.2,0,0" VerticalAlignment="Top" Width="246" Background="#FFEDEDED" Grid.Column="9" Grid.ColumnSpan="2" Grid.RowSpan="17" Grid.Row="1">

        </StackPanel>

        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" RenderTransformOrigin="0.702,0.63" Height="24" Grid.Column="4" Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <Button Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" RenderTransformOrigin="1.017,0.661" Height="23" Grid.Column="5" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Button x:Name="Tb7" Content="7" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Height="23" Grid.Column="1" Grid.Row="5" Click="num_Click"/>
        <Button x:Name="Tb8" Content="8" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="23" Grid.Column="3" Grid.Row="5" Click="num_Click"/>
        <Button x:Name="Tb9" Content="9" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="23" Grid.Column="4" Grid.Row="5" Grid.ColumnSpan="3" Margin="8.4,0,0,0" Click="num_Click"/>
        <Button x:Name="Tb4" Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Height="23" Grid.Column="1" Grid.Row="7" />
        <Button x:Name="Tb5" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="23" Grid.Column="3" Grid.Row="7" Click="num_Click"/>
        <Button x:Name="Tb6" Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="23" Grid.Column="5" Grid.Row="7" Grid.ColumnSpan="3" Click="num_Click"/>
        <Button x:Name="Tb3" Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="67" Height="25" Grid.Column="1" Grid.Row="9" Grid.RowSpan="3" Click="num_Click"/>
        <Button x:Name="Tb2" Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="25" Grid.Column="5" Grid.Row="9" Click="num_Click"/>
        <Button x:Name="Tb1" Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="69" Height="24" Grid.Column="3" Grid.Row="9" Click="num_Click" />
        <Button x:Name="Tb0" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="3" Grid.Row="11" Click="num_Click" />
        <Button Content="," HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Height="24" Grid.Column="1" Grid.Row="11" Grid.RowSpan="3" />
        <Button Content="Doorgaan" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="5" Grid.Row="11" />
        <Button Content="Annuleren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="1" Grid.Row="12" />
        <Button Content="Terug" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="2" Grid.Row="12" />
        <Button Content="Afronden" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="4" Grid.Row="12" />
        <Button Content="Wisselgeld" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="1" Grid.Row="15" />
        <Button Content="Zoeken" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="2" Grid.Row="15" Grid.RowSpan="2" Grid.ColumnSpan="3" />
        <Button Content="Bezorgen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="4" Grid.Row="15" Grid.RowSpan="2" Grid.ColumnSpan="6" />
        <Button Content="Kortings pas" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="1" Grid.Row="16" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <Button Content="Pin" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Background="#FF78C703" Height="25" Grid.Column="2" Grid.Row="16" Grid.RowSpan="2" Grid.ColumnSpan="3" />
        <Button Content="Retour" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Grid.Column="4" Grid.Row="16" Grid.RowSpan="2" Grid.ColumnSpan="6" />
    </Grid>
</Page>
