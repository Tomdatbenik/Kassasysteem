<Page x:Name="PLoginpage" x:Class="KassaSystem.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KassaSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage" Background="White">

    <Grid Background="#FFF0EFEF">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Naam:" Width="200" Height="17.6"></TextBlock>
            <TextBox x:Name="TbNaam" Width="200" Height="17.6"></TextBox>
            <TextBlock Text="Wachtwoord:" Width="200" Height="17.6"></TextBlock>
            <PasswordBox x:Name="PbPass" Width="200" PasswordChar="*" KeyDown="PbPass_KeyDown"></PasswordBox>
            <Button x:Name="BtLogin" Width="200" Height="20" Content="login" Margin="50,10" Click="BtLogin_Click"/>
        </StackPanel>
    </Grid>
</Page>
